<Page x:Class="Cinema.Pages.ChooseService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseService"
      Name="ChooseServicePage">

    <Grid DataContext="{Binding ElementName=ChooseServicePage, Path=.}">
        <StackPanel>
        <ComboBox Width="250" Height="25" SelectedItem="{Binding SelectedService}"  Name="ComboboxService"  DisplayMemberPath="Name"></ComboBox>

        <Button Click="Button_Click">Add to receipt</Button>
            <Button Click="Button_Click_1">ГО в корзину</Button>
        </StackPanel>
    </Grid>
</Page>
